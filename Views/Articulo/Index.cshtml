@model IEnumerable<inventario_ferreteria.Models.Articulo>

@{
    ViewData["Title"] = "Inventario de Artículos";
}

<div class="container mt-4">
    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <i class="bi bi-info-circle"></i> @TempData["Mensaje"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-primary"><i class="bi bi-box-seam"></i> Inventario de Artículos</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Nuevo Artículo
        </a>
    </div>

    <!-- Input de búsqueda -->
    <div class="row mb-3">
        <div class="col-md-6">
            <input type="text" id="searchInput" class="form-control" placeholder="Buscar por nombre o código..." />
        </div>
    </div>

    <div class="card shadow border-0 rounded-3">
        <div class="card-body">
            <table id="articulosTable" class="table table-hover align-middle">
                <thead class="table-light text-center">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Codigo)</th>
                        <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                        <th>@Html.DisplayNameFor(model => model.Categoria)</th>
                        <th>@Html.DisplayNameFor(model => model.Preciocompra)</th>
                        <th>@Html.DisplayNameFor(model => model.Precioventa)</th>
                        <th>@Html.DisplayNameFor(model => model.Stock)</th>
                        <th>@Html.DisplayNameFor(model => model.Proveedor)</th>
                        <th>@Html.DisplayNameFor(model => model.Stockminimo)</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="text-center">
                            <td>@Html.DisplayFor(modelItem => item.Codigo)</td>
                            <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                            <td>@Html.DisplayFor(modelItem => item.Categoria)</td>
                            <td>$@item.Preciocompra.ToString("N2")</td>
                            <td>$@item.Precioventa.ToString("N2")</td>
                            <td>
                                @if (item.Stock <= item.Stockminimo)
                                {
                                    <span class="badge bg-danger">@item.Stock</span>
                                }
                                else if (item.Stock - item.Stockminimo <= 5)
                                {
                                    <span class="badge bg-warning text-dark">@item.Stock</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">@item.Stock</span>
                                }
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.Proveedor)</td>
                            <td>@item.Stockminimo</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Codigo" class="btn btn-sm btn-primary me-1" title="Editar">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Codigo" class="btn btn-sm btn-info text-white me-1" title="Detalles">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Codigo" class="btn btn-sm btn-danger" title="Eliminar">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/articulo-index.js" asp-append-version="true"></script>
}
