@model inventario_ferreteria.Models.Articulo

@{
    ViewData["Title"] = "Eliminar Artículo";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-danger text-white d-flex align-items-center">
            <i class="bi bi-exclamation-triangle-fill me-2 fs-5"></i>
            <h4 class="mb-0">Eliminar Artículo</h4>
        </div>

        <div class="card-body">
            <h5 class="text-danger mb-3">
                ¿Estás seguro de que deseas eliminar este artículo?
            </h5>

            <div class="table-responsive">
                <table class="table table-bordered align-middle">
                    <tbody>
                        <tr>
                            <th style="width: 30%">@Html.DisplayNameFor(model => model.Nombre)</th>
                            <td>@Html.DisplayFor(model => model.Nombre)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Categoria)</th>
                            <td>@Html.DisplayFor(model => model.Categoria)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Preciocompra)</th>
                            <td>@Html.DisplayFor(model => model.Preciocompra)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Precioventa)</th>
                            <td>@Html.DisplayFor(model => model.Precioventa)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Stock)</th>
                            <td>@Html.DisplayFor(model => model.Stock)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Proveedor)</th>
                            <td>@Html.DisplayFor(model => model.Proveedor)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Stockminimo)</th>
                            <td>@Html.DisplayFor(model => model.Stockminimo)</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <form asp-action="Delete" class="mt-4 d-flex justify-content-between">
                <input type="hidden" asp-for="Codigo" />
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Cancelar
                </a>
                <button type="submit" class="btn btn-danger px-4">
                    <i class="bi bi-trash-fill"></i> Eliminar
                </button>
            </form>
        </div>
    </div>
</div>
